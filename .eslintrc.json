{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {},
  "overrides": [
    {
      "files": ["*.spec.js", "*.test.ts", "*.test.js"],
      "rules": {
        "no-undef": "off"
      }
    },
    {
      "files": ["src/entities/*"],
      "rules": {
        "camelcase": "off"
      }
    }
  ]
}
